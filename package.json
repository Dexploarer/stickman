{
  "name": "prompt-or-die-social-suite",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Standalone local social suite for Prompt or Die with OpenRouter AI SDK integration, web UI, and TUI.",
  "scripts": {
    "dev": "tsx src/server.ts",
    "lint": "bunx tsc --noEmit",
    "test": "bun test",
    "smoke:api": "bash scripts/smoke-endpoints.sh",
    "verify": "bunx tsc --noEmit && bun test && bun run smoke:api",
    "tui": "tsx src/tui.ts",
    "x:setup": "bash scripts/setup-worktree.sh",
    "setup": "bash scripts/setup-worktree.sh",
    "worktree:new": "bash scripts/new-worktree-bootstrap.sh",
    "x:run": "bash x-local/x_v3_local.sh"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.0",
    "ai": "^6.0.26",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "prompts": "^2.4.2",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^24.3.0",
    "@types/prompts": "^2.4.9",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
