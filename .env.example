PORT=8787

# OpenRouter via AI SDK
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openai/gpt-4.1-mini
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_HTTP_REFERER=http://localhost:8787
OPENROUTER_APP_TITLE=Prompt or Die Social Suite

# Local X runner defaults
X_LOCAL_SCRIPT=./x-local/x_v3_local.sh
X_BROWSER=chrome
X_CHROME_PROFILE=
X_CHROME_PROFILE_NAME=Default
X_VISIBLE=false
X_NOTIFY=true
X_NOTIFY_WEBHOOK=
X_COMPAT_PROVIDER=none

# Prompt or Die export behavior
PORDIE_ENABLED=true
PORDIE_SCOPE=global
PORDIE_AUTO_EXPORT_ON_COMPLETE=true
PORDIE_SYNC_PROJECT_ENV=false

# Optional persona bootstrap (JSON array string)
POD_AGENT_POST_EXAMPLES_JSON=

# Heartbeat agent loop
HEARTBEAT_ENABLED=true
HEARTBEAT_INTERVAL_MINUTES=20
HEARTBEAT_FETCH_LIMIT=40
HEARTBEAT_AUTO_ACT=true
